@model client.Models.HomeModel
@{
    ViewData["Title"] = "Home Page";
}
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <h2>ChatGPT</h2>
            </div>
            <div class="cronologia">
                <div class="file">
                    <button>Presentazione</button>
                </div>
                <div class="file">
                    <button>Appunti scuola</button>
                </div>
                <div class="file">
                    <button>aaaaaaaaaaaa</button>
                </div>
            </div>
        </aside>
        <div class="sidebar-buttons">
            <button class="sidebar-btn" id="chatBtn">C</button>
            <button class="sidebar-btn" id="fileBtn">F</button>
        </div>
        <main class="content">
            <div class="chat" id="chatSection">
                <div class="message">
                    <span>Ciao, come va?</span>
                </div>
                <div class="response">
                    <span>Va tutto bene, grazie. E tu, come stai? C'è qualcosa in particolare di cui vuoi parlare o su cui hai bisogno di aiuto?</span>
                </div>
            </div>
            <div class="files" id="fileSection" style="display: none;">
                <div class="file" onclick="openFile('file1.pdf')">
                    <button>File 1</button>
                </div>
                <div class="file" onclick="openFile('file2.pdf')">
                    <button>File 2</button>
                </div>
                <div class="file" onclick="openFile('file3.pdf')">
                    <button>File 3</button>
                </div>
            </div>
            <footer>
                <button class="attach-button">📎</button>
                <input type="text" placeholder="Invia un messaggio">
                <button class="send-button">↥</button>
            </footer>
        </main>
    </div>
    <script src="script.js"></script>
</body>
