@model client.Models.UserAuthLogin
@{
    ViewData["Title"] = "Login";
}

    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


    <div class="login-container">
        <div class="login-box">
            <div class="logo">
            <img src="~/img/logo_full_no_nome.svg" alt="Logo">
            </div>
            <form method="post" autocomplete="off">
                <label asp-for="Username">Nome utente</label>
                <input asp-for="Username" class="entry" type="text" id="username" name="username">

                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="entry" type="password" id="password" name="password">

                <div class="remember-me">
                    <div class="checkbox-container">
                        <input type="checkbox" id="remember" name="remember">
                        <label for="remember">Ricordami</label>
                    </div>
                    <button type="submit" asp-action="Login" class="login-button">Accedi</button>
                </div>

                <div class="register-link">
                    Non hai ancora un account? <a asp-action="SignUp">Registrati</a>
                </div>
            </form>
        </div>
    </div>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}